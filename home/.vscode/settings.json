{
  // Language-specific formatter settings
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.rulers": [88],
    "editor.wordWrap": "off"
  },
  "[r]": {
    "editor.defaultFormatter": "REditorSupport.r",
    "editor.formatOnSave": true,
    "editor.wordWrap": "off"
  },
  "[rmd]": {
    "editor.defaultFormatter": "REditorSupport.r",
    "editor.wordWrap": "on"
  },

  // General editor settings
  "alwaysUseActiveTerminal": false,
  "bracketedPaste": false,
  "editor.accessibilitySupport": "off",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.rulers": [80, 100],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "top",

  // Explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.incrementalNaming": "smart",
  "explorer.compactFolders": false,

  // File associations
  "files.associations": {
    "*.R": "r",
    "*.r": "r",
    "*.Rmd": "rmd",
    "*.rmd": "rmd",
    "*.py": "python",
    "*.md": "markdown"
  },

  // Python settings
  "python.defaultInterpreterPath": "python3",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.include": [
    "**/*.py"
  ],
  "python.analysis.exclude": [
    "**/node_modules",
    "**/__pycache__",
    "**/*.pyc",
    "**/.git",
    "**/.venv",
    "**/venv",
    "**/.env"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "black",
  "python.sortImports.args": ["--profile", "black"],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],

  // R settings
  "r.bracketedPaste": true,
  "r.rterm.option": [
    "--no-save",
    "--no-restore",
    "--no-site-file"
  ],
  "r.sessionWatcher": true,
  "r.useRadian": true,
  "r.rpath.mac": "/usr/local/bin/R",
  "r.lsp.enabled": true,
  "r.lsp.diagnostics": true,
  "r.lsp.multiServer": true,
  "r.lsp.promptToInstall": true,
  "r.lsp.debug": false,
  "r.lsp.args": [],
  "r.lsp.use_stdio": false,
  "r.lsp.lang": "",

  // Markdown settings
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "markdown.preview.markers": true,
  "markdown.preview.typographer": true,

  // Jupyter settings
  "jupyter.interactiveWindow.creationMode": "perFile",
  "jupyter.askForKernelRestart": false,
  "jupyter.enableAutoMatcher": true,
  "jupyter.enableExtendedKernelCompletions": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": "sendToInteractiveWindow",

  // Git settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,

  // Terminal settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",

  // Workbench settings
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": false,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,

  // File watching
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.Rhistory": true,
    "**/.RData": true
  },

  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.git": true,
    "**/.venv": true,
    "**/venv": true,
    "**/.Rhistory": true,
    "**/.RData": true
  },

  // Extensions settings
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,

  // Live Share settings
  "liveShare": {
    "defaults": {
      "commandForward": false,
      "shareBrowser": false,
      "shareWorkspace": true
    },
    "timeout": 10000
  },

  // Project Manager settings
  "projectManager.git.baseFolders": [
    "/Users/kam/Documents/Projects/Repos",
    "/Users/kam/Documents/Projects/Forks"
  ],

  // R Markdown specific settings
  "rmarkdown": {
    "chunkBackgroundColor": "rgba(128, 128, 128, 0.1)",
    "codeLensCommands": [
      "r.runCurrentChunk",
      "r.runAboveChunks"
    ],
    "enableCodeLens": true,
    "knit": {
      "command": "rmarkdown::render",
      "defaults": {
        "knitWorkingDirectory": "document directory"
      },
      "focusOutputChannel": true,
      "openOutputFile": false,
      "useBackgroundProcess": true
    },
    "preview": {
      "autoRefresh": true,
      "zoom": 1
    }
  },

  // R path settings
  "rpath": {
    "linux": "",
    "mac": "",
    "windows": ""
  },

  // R terminal settings
  "rterm": {
    "linux": "",
    "mac": "",
    "option": [
      "--no-save",
      "--no-restore"
    ],
    "windows": ""
  },

  "rtermSendDelay": 8,

  // R session settings
  "session": {
    "data": {
      "pageSize": 500,
      "rowLimit": 0
    },
    "emulateRStudioAPI": true,
    "levelOfObjectDetail": "Minimal",
    "objectLengthLimit": 2000,
    "objectTimeout": 50,
    "useWebServer": false,
    "viewers": {
      "viewColumn": {
        "browser": "Active",
        "helpPanel": "Two",
        "pageViewer": "Active",
        "plot": "Two",
        "view": "Two",
        "viewer": "Two"
      }
    },
    "watchGlobalEnvironment": true
  },

  "sessionWatcher": true,

  // R source settings
  "source": {
    "echo": false,
    "encoding": "UTF-8",
    "focus": "editor"
  },

  "useRenvLibPath": false,

  // Plot settings
  "plot": {
    "customStyleOverwrites": "",
    "defaults": {
      "colorTheme": "original",
      "fullWindowMode": false,
      "plotPreviewLayout": "multirow"
    },
    "devArgs": {
      "height": 1200,
      "width": 800
    },
    "timing": {
      "refreshInterval": 10,
      "resizeInterval": 100
    },
    "useHttpgd": false
  },

  // Workspace viewer settings
  "workspaceViewer": {
    "clearPrompt": true,
    "removeHiddenItems": false,
    "showObjectSize": false
  },

  // Telemetry settings
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",

  // Help panel settings
  "helpPanel": {
    "cacheIndexFiles": "None",
    "clickCodeExamples": {
      "Click": "Copy",
      "Ctrl+Click": "Run",
      "Shift+Click": "Ignore"
    },
    "enableHoverLinks": true,
    "enableSyntaxHighlighting": true,
    "previewLocalPackages": [
      "."
    ],
    "rpath": ""
  },

  // LSP settings
  "lsp": {
    "args": [],
    "debug": false,
    "diagnostics": true,
    "enabled": true,
    "lang": "",
    "multiServer": true,
    "promptToInstall": true,
    "use_stdio": false
  },

  "removeLeadingComments": false
}
